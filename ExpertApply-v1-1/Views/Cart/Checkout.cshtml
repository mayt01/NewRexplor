@model List<ShoppingCartItem>

@{
    ViewData["Title"] = "تکمیل خرید";
    var totalAmount = Model.Sum(item => item.Total);
}

<div class="container py-4">
    <h1 class="mb-4">
        <i class="bi bi-cart-check text-primary"></i>
        @ViewData["Title"]
    </h1>

    <div class="row">
        <!-- اطلاعات خرید -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">مرحله نهایی خرید</h5>
                </div>
                <div class="card-body">
                    <!-- خلاصه فایل‌ها -->
                    <div class="mb-4">
                        <h6 class="border-bottom pb-2">فایل‌های انتخابی:</h6>
                        <ul class="list-group">
                            @foreach (var item in Model)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-file-earmark-excel text-primary me-2"></i>
                                        @item.Title
                                        <small class="text-muted">(@item.CategoryName)</small>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">
                                        @item.Quantity × @item.Price.ToString("N0")
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>

                    <!-- اطلاعات خریدار -->
                    <div class="mb-4">
                        <h6 class="border-bottom pb-2">اطلاعات خریدار:</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">نام و نام خانوادگی</label>
                                <input type="text" class="form-control" value="@User.Identity.Name" readonly>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">تاریخ خرید</label>
                                <input type="text" class="form-control" value="@DateTime.Now.ToString("yyyy/MM/dd HH:mm")" readonly>
                            </div>
                        </div>
                    </div>

                    <!-- درگاه‌های پرداخت -->
                    <div class="mb-4">
                        <h6 class="border-bottom pb-2 mb-3">روش پرداخت:</h6>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="paymentMethod"
                                   id="zarinpal" value="zarinpal" checked>
                            <label class="form-check-label" for="zarinpal">
                                <i class="bi bi-credit-card text-success"></i>
                                پرداخت آنلاین (زرین‌پال)
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="radio" name="paymentMethod"
                                   id="manual" value="manual">
                            <label class="form-check-label" for="manual">
                                <i class="bi bi-bank text-primary"></i>
                                پرداخت کارت به کارت
                            </label>
                        </div>
                    </div>

                    <!-- قوانین -->
                    <div class="alert alert-warning">
                        <p class="mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>توجه:</strong> پس از پرداخت موفق، لینک‌های دانلود بلافاصله در اختیار شما قرار می‌گیرد. این لینک‌ها تنها برای شخص خریدار معتبر بوده و در صورت بروز هرگونه مشکل در فرآیند پرداخت، لطفاً با تیم پشتیبانی تماس بگیرید.
                        </p>
@*                         <h6><i class="bi bi-exclamation-triangle"></i> قوانین و مقررات:</h6> *@
@*                         <ul class="mb-0 small" style="font-weight: 10px;">
                            <li>پس از پرداخت موفق، لینک دانلود فایل‌ها بلافاصله فعال می‌شود.</li>
                            <li>فایل‌ها فقط برای شخص خریدار قابل دانلود می‌باشند.</li>
                            <li>در صورت بروز مشکل در پرداخت، با پشتیبانی تماس بگیرید.</li>
                        </ul> *@
                    </div>
                </div>
            </div>
        </div>

        <!-- خلاصه پرداخت -->
        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-receipt"></i> صورت حساب
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">تعداد فایل:</span>
                            <span>@Model.Count</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">جمع کل:</span>
                            <span>@totalAmount.ToString("N0") تومان</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-2">
                            <span class="h5">مبلغ قابل پرداخت:</span>
                            <span class="h4 text-success">@totalAmount.ToString("N0") تومان</span>
                        </div>
                    </div>

                    <!-- دکمه پرداخت -->
                    <div class="d-grid gap-2">
                        <form asp-action="CreateOrder" method="post">
                            <button type="submit" class="btn btn-success btn-lg w-100">
                                <i class="bi bi-lock-fill"></i> پرداخت و نهایی کردن خرید
                            </button>
                        </form>

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> بازگشت به سبد خرید
                        </a>
                    </div>

                    <!-- اطلاعات حساب -->
                    <div class="mt-4 pt-3 border-top">
                        <h6 class="text-muted">پرداخت کارت به کارت:</h6>
                        <div class="bg-light p-3 rounded small">
                            <p class="mb-1"><strong>شماره کارت:</strong> ۶۳۶۲-۱۴۱۱-۹۹۱۸-۵۰۵۷</p>
                            <p class="mb-1"><strong>به نام:</strong> شرکت رکسپلور</p>
                            <p class="mb-0"><strong>شماره پیگیری:</strong> پس از واریز، فیش را ارسال کنید</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>