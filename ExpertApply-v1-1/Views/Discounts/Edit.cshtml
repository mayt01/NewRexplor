                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> ذخیره تغییرات
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> انصراف
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger float-end">
                                <i class="bi bi-trash"></i> حذف کد تخفیف
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // نمایش/پنهان کردن انتخاب فایل‌ها
            $('#isForAllFiles').change(function() {
                if ($(this).is(':checked')) {
                    $('#fileSelectionSection').hide();
                    // غیرفعال کردن چک‌باکس‌ها
                    $('.file-checkbox').prop('disabled', true);
                } else {
                    $('#fileSelectionSection').show();
                    $('.file-checkbox').prop('disabled', false);
                }
            });

            // اعتبارسنجی تاریخ‌ها
            $('form').submit(function(e) {
                const startDate = new Date($('#StartDate').val());
                const endDate = new Date($('#EndDate').val());

                if (endDate <= startDate) {
                    e.preventDefault();
                    alert('تاریخ پایان باید بعد از تاریخ شروع باشد');
                    return false;
                }

                // تبدیل کد به uppercase
                const codeInput = $('#Code');
                codeInput.val(codeInput.val().toUpperCase());

                // اگر برای همه فایل‌ها نیست و هیچ فایلی انتخاب نشده
                if (!$('#isForAllFiles').is(':checked')) {
                    const selectedCount = $('.file-checkbox:checked').length;
                    if (selectedCount === 0) {
                        if (!confirm('هیچ فایلی برای تخفیف انتخاب نشده است. آیا مطمئن هستید؟')) {
                            e.preventDefault();
                            return false;
                        }
                    }
                }
            });

            // مقداردهی اولیه وضعیت نمایش بخش فایل‌ها
            if ($('#isForAllFiles').is(':checked')) {
                $('.file-checkbox').prop('disabled', true);
            }
        });
    </script>
} *@



