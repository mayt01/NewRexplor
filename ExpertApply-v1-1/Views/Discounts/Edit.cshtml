                                @if (files.Any())
                                {
                                    foreach (var file in files)
                                    {
                                        <div class="form-check mb-2">
                                            <input type="checkbox"
                                                   name="SelectedFileIds"
                                                   value="@file.Id"
                                                   class="form-check-input file-checkbox"
