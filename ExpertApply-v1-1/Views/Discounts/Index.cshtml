@model IEnumerable<Discount>
@{
    ViewData["Title"] = "مدیریت کدهای تخفیف";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-percent text-success"></i> @ViewData["Title"]
        </h1>
        <div>
            <a asp-action="Create" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> کد تخفیف جدید
            </a>
            <a asp-action="Stats" class="btn btn-info">
                <i class="bi bi-graph-up"></i> آمار استفاده
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-percent display-1 text-muted mb-3"></i>
                <h4 class="text-muted">هنوز کد تخفیفی ایجاد نکرده‌اید</h4>
                <p class="text-muted mb-4">برای ایجاد اولین کد تخفیف روی دکمه زیر کلیک کنید.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> ایجاد کد تخفیف
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>کد تخفیف</th>
                                <th>درصد</th>
                                <th>تاریخ شروع</th>
                                <th>تاریخ پایان</th>
                                <th>استفاده شده</th>
                                <th>وضعیت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var discount in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@discount.Code</strong>
                                        @if (!discount.IsForAllFiles)
                                        {
                                            <span class="badge bg-info">محدود</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-success">@discount.DiscountPercent%</span>
                                    </td>
                                    <td>@discount.StartDate.ToString("yyyy/MM/dd")</td>
                                    <td>@discount.EndDate.ToString("yyyy/MM/dd")</td>
                                    <td>
                                        @discount.UsedCount
                                        @if (discount.UsageLimit.HasValue)
                                        {
                                            <span class="text-muted">/ @discount.UsageLimit.Value</span>
                                        }
                                    </td>
                                    <td>
                                        @if (discount.IsActive)
                                        {
                                            @if (discount.StartDate > DateTime.Now)
                                            {
                                                <span class="badge bg-warning">آینده</span>
                                            }
                                            else if (discount.EndDate < DateTime.Now)
                                            {
                                                <span class="badge bg-secondary">منقضی</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">فعال</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">غیرفعال</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@discount.Id"
                                               class="btn btn-info" title="جزئیات">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@discount.Id"
                                               class="btn btn-warning" title="ویرایش">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@discount.Id"
                                               class="btn btn-danger" title="حذف">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>