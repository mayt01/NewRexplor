@section Scripts {
    <script>
        $(document).ready(function() {
            // نمایش/پنهان کردن بخش بازاریاب
            $('#isForMarketer').change(function() {
                if ($(this).is(':checked')) {
                    $('#marketerFields').show();
                    // اگر کد برای بازاریاب است، ایمیل را اجباری کنیم (اختیاری)
                    // $('#MarketerEmail').prop('required', true);
                } else {
                    $('#marketerFields').hide();
                    // $('#MarketerEmail').prop('required', false);
                }
            });

            // نمایش/پنهان کردن انتخاب فایل‌ها
            $('#isForAllFiles').change(function() {
                if ($(this).is(':checked')) {
                    $('#fileSelectionSection').hide();
                } else {
                    $('#fileSelectionSection').show();
                }
            });

            // اعتبارسنجی تاریخ‌ها
            $('form').submit(function(e) {
                const startDate = new Date($('#StartDate').val());
                const endDate = new Date($('#EndDate').val());

                if (endDate <= startDate) {
                    e.preventDefault();
                    alert('تاریخ پایان باید بعد از تاریخ شروع باشد');
                    return false;
                }

                // تبدیل کد به uppercase
                const codeInput = $('#Code');
                codeInput.val(codeInput.val().toUpperCase());

                // اگر کد برای بازاریاب است اما ایمیل ندارد، هشدار بده
                if ($('#isForMarketer').is(':checked') && !$('#MarketerEmail').val()) {
                    if (!confirm('ایمیل بازاریاب وارد نشده است. آیا مطمئن هستید؟')) {
                        e.preventDefault();
                        return false;
                    }
                }
            });

            // مقداردهی اولیه
            if ($('#isForMarketer').is(':checked')) {
                $('#marketerFields').show();
            }
            if ($('#isForAllFiles').is(':checked')) {
                $('#fileSelectionSection').hide();
            }
        });
    </script>
}