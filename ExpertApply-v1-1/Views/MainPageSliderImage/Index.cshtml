@model IEnumerable<Rexplor.Models.MainPageSliderImage>

<h1>Image Gallery</h1>

@if (Model.Any())
{
    <div class="row">
        @foreach (var image in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(image.ImageData)" class="card-img-top" alt="Uploaded Image" />
                    <div class="card-body">
                        <h5 class="card-title">Image ID: @image.Id</h5>
                        <p class="card-text">File Name: @image.Caption</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No images uploaded yet.</p>
}
