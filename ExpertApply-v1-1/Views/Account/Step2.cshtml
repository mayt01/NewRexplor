<h2>ثبت نام - مرحله 2</h2>

<p>کد تأیید به ایمیل شما ارسال شده است.</p>

<form asp-action="Step2" method="post">
    <!-- نمایش خطای عمومی -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="VerificationCode"></label>
        <input asp-for="VerificationCode" class="form-control" />
        <span asp-validation-for="VerificationCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">تأیید کد</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
