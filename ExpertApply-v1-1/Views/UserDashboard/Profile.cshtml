@using Microsoft.AspNetCore.Identity
@model ApplicationUser
@{
    ViewData["Title"] = "پروفایل کاربری";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-4">
            <!-- کارت پروفایل -->
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-circle display-1 text-primary"></i>
                    </div>
                    <h4>@Model.FirstName</h4>
@*                     <p class="text-muted">@Model.FirstName</p>
 *@                    <hr>
                    <h4>@Model.LastName</h4>
@*                     <p class="text-muted">@Model.LastName</p> *@
                    <hr>
                    <h4>@Model.UserName</h4>
@*                     <p class="text-muted">@Model.Email</p> *@
                    <hr>
                    <small class="text-muted">
                        <i class="bi bi-calendar"></i>
                        عضویت از: @Model.RegistrationDate
                    </small>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- اطلاعات حساب -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> اطلاعات حساب
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-4">نام:</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">نام خانوادگی:</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4">نام کاربری:</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">ایمیل:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">تأیید ایمیل:</dt>
                        <dd class="col-sm-8">
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success">تأیید شده</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">تأیید نشده</span>
                            }
                        </dd>

                        <dt class="col-sm-4">شماره تلفن:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                @Model.PhoneNumber
                            }
                            else
                            {
                                <span class="text-muted">ثبت نشده</span>
                            }
                        </dd>
                    </dl>
                </div>
                
                <div class="card-footer">
                    <a asp-area="Identity" asp-page="/Account/Manage/Index"
                       class="btn btn-primary">
                        <i class="bi bi-pencil"></i> ویرایش اطلاعات
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>