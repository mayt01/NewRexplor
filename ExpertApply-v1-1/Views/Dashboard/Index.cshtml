@using Rexplor.Controllers
<!-- Views/Dashboard/Index.cshtml -->
@model DashboardViewModel

@{
    ViewData["Title"] = "داشبورد مدیریت";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
            <i class="bi bi-speedometer2 text-primary"></i>
            @ViewData["Title"]
        </h1>
        <div>
            <span class="text-muted">
                <i class="bi bi-calendar"></i> @DateTime.Now.ToString("yyyy/MM/dd")
            </span>
        </div>
    </div>

    <!-- آمار کلی -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-primary mb-1">
                                کل فایل‌ها
                            </div>
                            <div class="h5 mb-0 fw-bold">@Model.TotalFiles</div>
@*                             <div class="text-muted small">
                                @Model.ActiveFiles فایل فعال
                            </div> *@
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-files fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-success mb-1">
                                دسته‌بندی‌ها
                            </div>
                            <div class="h5 mb-0 fw-bold">@Model.TotalCategories</div>
@*                             <div class="text-muted small">
                                @Model.ActiveCategories دسته فعال
                            </div> *@
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-tags fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-info mb-1">
                                آمار امروز
                            </div>
@*                             <div class="h5 mb-0 fw-bold">@Model.TodayUploads</div> *@
                            <div class="text-muted small">
                                @Model.TodayViews بازدید، @Model.TodayDownloads دانلود
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-calendar-day fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-start-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col me-2">
                            <div class="text-xs fw-bold text-warning mb-1">
                                سریع‌ترین دسترسی
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <a asp-controller="DataFiles" asp-action="Create"
                                       class="btn btn-sm btn-warning">
                                        <i class="bi bi-cloud-upload"></i> آپلود
                                    </a>
                                </div>
                                <div class="col-auto ms-2">
                                    <a asp-controller="DataFileCategories" asp-action="Index"
                                       class="btn btn-sm btn-info">
                                        <i class="bi bi-tags"></i> دسته‌بندی
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-lightning fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ردیف دوم -->
    <div class="row">
        <!-- جدیدترین فایل‌ها -->
        <div class="col-xl-6 col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="bi bi-clock-history"></i> جدیدترین فایل‌ها
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th>عنوان</th>
                                    <th>دسته‌بندی</th>
                                    <th>قیمت</th>
                                    <th>تاریخ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var file in Model.RecentFiles)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="DataFiles" asp-action="Details"
                                               asp-route-id="@file.Id">
                                                @file.Title
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge bg-light text-dark">
                                                <i class="@file.Category?.IconClass"></i>
                                                @file.Category?.Name
                                            </span>
                                        </td>
                                        <td class="text-success">
                                            @file.Price.ToString("N0")
                                        </td>
@*                                         <td class="text-muted">
                                            @file.CreatedDate.ToString("MM/dd")
                                        </td> *@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-controller="DataFiles" asp-action="Index"
                           class="btn btn-sm btn-outline-primary">
                            مشاهده همه فایل‌ها <i class="bi bi-arrow-left"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- پربازدیدترین فایل‌ها -->
        <div class="col-xl-6 col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-success">
                        <i class="bi bi-fire"></i> پربازدیدترین فایل‌ها
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th>عنوان</th>
                                    <th>بازدید</th>
                                    <th>دانلود</th>
                                    <th>امتیاز</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var file in Model.PopularFiles)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="DataFiles" asp-action="Details"
                                               asp-route-id="@file.Id">
                                                @file.Title
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@file.ViewCount</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">@file.DownloadCount</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-warning">@file.Rating.ToString("0.0")</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- دسته‌بندی‌های برتر -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 fw-bold text-warning">
                        <i class="bi bi-trophy"></i> دسته‌بندی‌های برتر
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var cat in Model.TopCategories)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card border-warning">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="card-title">
                                                    <i class="@cat.Category.IconClass"></i>
                                                    @cat.Category.Name
                                                </h6>
                                                <p class="card-text text-muted small">
                                                    @cat.Category.Description
                                                </p>
                                            </div>
                                            <span class="badge bg-warning">@cat.FileCount فایل</span>
                                        </div>

                                        <div class="row mt-3 text-center">
                                            <div class="col-4">
                                                <div class="text-muted small">بازدید</div>
                                                <div class="fw-bold">@cat.TotalViews</div>
                                            </div>
                                            <div class="col-4">
                                                <div class="text-muted small">دانلود</div>
                                                <div class="fw-bold">@cat.TotalDownloads</div>
                                            </div>
                                            <div class="col-4">
                                                <div class="text-muted small">میانگین</div>
                                                <div class="fw-bold">
                                                    @((cat.TotalViews > 0) ?
                                                                                                    (cat.TotalViews / cat.FileCount).ToString("N0") : "0")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                                                }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>