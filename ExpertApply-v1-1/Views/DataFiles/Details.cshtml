</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            const fileId = @Model.Id;
            const originalPrice = @Model.Price;
            let currentDiscount = null;

            // اعمال تخفیف
            $('#applyDiscountBtn').click(function() {
                const discountCode = $('#discountCodeInput').val().trim();

                if (!discountCode) {
                    showMessage('لطفا کد تخفیف را وارد کنید', 'danger');
                    return;
                }

                // نمایش لودینگ
                const btn = $(this);
                btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> در حال بررسی...');

                // درخواست به API
                $.ajax({
                    url: '/api/discount/validate',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        code: discountCode,
                        fileId: fileId,
                        originalAmount: originalPrice
                    }),
                    success: function(response) {
                        btn.prop('disabled', false).html('اعمال');

                        if (response.isValid) {
                            currentDiscount = response;

                            // نمایش اطلاعات تخفیف
                            $('#discountAmount').text(formatCurrency(response.discountAmount) + ' تومان');
                            $('#finalPrice').text(formatCurrency(response.finalAmount) + ' تومان');
                            $('#finalPriceSection').removeClass('d-none');

                            // به‌روزرسانی دکمه خرید
                            updatePurchaseButton(response.finalAmount);

                            // ذخیره در فیلدهای مخفی فرم
                            $('#hiddenDiscountCode').val(response.code);
                            $('#hiddenFinalPrice').val(response.finalAmount);

                            // ذخیره در localStorage
                            saveDiscountToStorage(response);

                            showMessage(response.message, 'success');

                            // انیمیشن
                            $('#finalPriceSection').addClass('discount-applied');
                            setTimeout(() => {
                                $('#finalPriceSection').removeClass('discount-applied');
                            }, 500);
                        } else {
                            showMessage(response.message, 'danger');
                            $('#finalPriceSection').addClass('d-none');
                            resetPurchaseButton();
                        }
                    },
                    error: function(xhr, status, error) {
                        btn.prop('disabled', false).html('اعمال');
                        showMessage('خطا در اتصال به سرور. لطفا دوباره تلاش کنید.', 'danger');
                        console.error('Error:', error);
                    }
                });
            });

            // اعمال تخفیف ذخیره شده در صورت وجود
            applySavedDiscount();

            // تغییر کد تخفیف - ریست کردن
            $('#discountCodeInput').on('input', function() {
                if (currentDiscount && $(this).val().trim() !== currentDiscount.code) {
                    $('#finalPriceSection').addClass('d-none');
                    resetPurchaseButton();
                    currentDiscount = null;
                    $('#hiddenDiscountCode').val('');
                    $('#hiddenFinalPrice').val('');
                }
            });

            // ارسال فرم خرید
            $('#addToCartForm').submit(function(e) {
                // اگر تخفیف اعمال شده، اطلاعات را به فرم اضافه کن
                if (currentDiscount) {
                    $('#hiddenDiscountCode').val(currentDiscount.code);
                    $('#hiddenFinalPrice').val(currentDiscount.finalAmount);
                }

                // نمایش لودینگ روی دکمه
                $('#addToCartBtn').prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> در حال اضافه کردن...');
            });

            // تابع نمایش پیام
            function showMessage(message, type) {
                $('#discountMessage').html('<div class="alert alert-' + type + ' alert-dismissible fade show" role="alert">' +
                    message +
                    '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                    '</div>');

                // حذف خودکار پیام بعد از 5 ثانیه
                setTimeout(function() {
                    $('.alert').alert('close');
                }, 5000);
            }

            // تابع ذخیره تخفیف در localStorage
            function saveDiscountToStorage(response) {
                const discountData = {
                    code: response.code,
                    fileId: fileId,
                    discountPercent: response.discountPercent,
                    discountAmount: response.discountAmount,
                    finalAmount: response.finalAmount,
                    originalPrice: originalPrice,
                    timestamp: new Date().getTime()
                };

                localStorage.setItem('discount_' + fileId, JSON.stringify(discountData));
            }

            // تابع اعمال تخفیف ذخیره شده
            function applySavedDiscount() {
                const discountData = localStorage.getItem('discount_' + fileId);

                if (discountData) {
                    const data = JSON.parse(discountData);

                    // بررسی معتبر بودن (کمتر از 1 ساعت از ذخیره گذشته)
                    const oneHour = 60 * 60 * 1000;
                    const now = new Date().getTime();

                    if (now - data.timestamp < oneHour) {
                        // اعمال تخفیف
                        $('#discountCodeInput').val(data.code);
                        $('#discountAmount').text(formatCurrency(data.discountAmount) + ' تومان');
                        $('#finalPrice').text(formatCurrency(data.finalAmount) + ' تومان');
                        $('#finalPriceSection').removeClass('d-none');
                        updatePurchaseButton(data.finalAmount);

                        // ذخیره در متغیر جاری
                        currentDiscount = {
                            code: data.code,
                            discountAmount: data.discountAmount,
                            finalAmount: data.finalAmount,
                            discountPercent: data.discountPercent
                        };

                        // ذخیره در فیلدهای مخفی
                        $('#hiddenDiscountCode').val(data.code);
                        $('#hiddenFinalPrice').val(data.finalAmount);

                        showMessage('تخفیف قبلی اعمال شد', 'info');
                    } else {
                        // حذف تخفیف منقضی شده
                        localStorage.removeItem('discount_' + fileId);
                    }
                }
            }

            // تابع به‌روزرسانی دکمه خرید
            function updatePurchaseButton(finalPrice) {
                $('#addToCartBtn').html('<i class="bi bi-cart-plus"></i> افزودن به سبد خرید (' +
                    formatCurrency(finalPrice) + ' تومان)');
            }

            // تابع ریست کردن دکمه خرید
            function resetPurchaseButton() {
                $('#addToCartBtn').html('<i class="bi bi-cart-plus"></i> افزودن به سبد خرید (' +
                    formatCurrency(originalPrice) + ' تومان)');
            }

            // تابع فرمت ارز
            function formatCurrency(amount) {
                return new Intl.NumberFormat('fa-IR').format(Math.round(amount));
            }
        });
    </script>

    <style>
        .discount-applied {
            animation: pulse 0.5s ease-in-out;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.02);
            }

            100% {
                transform: scale(1);
            }
        }
    </style>
}