@model IEnumerable<DataFileCategory>

@{
    ViewData["Title"] = "مدیریت دسته‌بندی‌ها";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
            <i class="bi bi-tags text-primary"></i>
            @ViewData["Title"]
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> دسته‌بندی جدید
        </a>
    </div>

    <!-- پیام‌های موفقیت/خطا -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-tags display-1 text-muted mb-3"></i>
                <h4 class="text-muted">هنوز دسته‌بندی‌ای ایجاد نکرده‌اید</h4>
                <p class="text-muted mb-4">با ایجاد دسته‌بندی، سازماندهی فایل‌هایتان را آسان‌تر کنید.</p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> ایجاد اولین دسته‌بندی
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-0">
                                        <i class="@category.IconClass text-primary"></i>
                                        @category.Name
                                    </h5>
                                </div>
                                <span class="badge bg-primary rounded-pill">@category.FileCount</span>
                            </div>

                            @if (!string.IsNullOrEmpty(category.Description))
                            {
                                <p class="card-text text-muted small mb-3">
                                    @category.Description
                                </p>
                            }

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (category.Id > 0)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> فعال
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> غیرفعال
                                        </span>
                                    }
                                </div>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@category.Id"
                                       class="btn btn-outline-primary" title="جزئیات">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@category.Id"
                                       class="btn btn-outline-warning" title="ویرایش">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@category.Id"
                                       class="btn btn-outline-danger" title="حذف">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>