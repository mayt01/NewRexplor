@model DataFileCategory

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">دسته‌بندی‌ها</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- اطلاعات دسته‌بندی -->
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h1 class="h3">
                                <i class="@Model.IconClass text-primary"></i>
                                @Model.Name
                            </h1>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="lead text-muted">@Model.Description</p>
                            }
                        </div>
                        <div>
                            @if (Model.Id > 0)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle"></i> فعال
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">
                                    <i class="bi bi-x-circle"></i> غیرفعال
                                </span>
                            }
                        </div>
                    </div>

                    <!-- آمار -->
                    <div class="row text-center mb-4">
                        <div class="col-md-4">
                            <div class="border rounded p-3">
                                <i class="bi bi-files display-6 text-primary"></i>
                                <h3 class="mt-2">@Model.DataFiles?.Count(f => f.IsActive)</h3>
                                <small class="text-muted">فایل فعال</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border rounded p-3">
                                <i class="bi bi-eye display-6 text-info"></i>
                                <h3 class="mt-2">@Model.DataFiles?.Sum(f => f.ViewCount)</h3>
                                <small class="text-muted">کل بازدید</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border rounded p-3">
                                <i class="bi bi-download display-6 text-success"></i>
                                <h3 class="mt-2">@Model.DataFiles?.Sum(f => f.DownloadCount)</h3>
                                <small class="text-muted">کل دانلود</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> ویرایش
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> حذف
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-right"></i> بازگشت
                        </a>
                    </div>
                </div>
            </div>

            <!-- لیست فایل‌های این دسته -->
            @if (Model.DataFiles != null && Model.DataFiles.Any(f => f.IsActive))
            {
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-file-earmark-excel"></i>
                            فایل‌های این دسته
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var file in Model.DataFiles.Where(f => f.IsActive).Take(10))
                            {
                                <a asp-controller="DataFiles" asp-action="Details" asp-route-id="@file.Id"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@file.Title</h6>
                                        <small class="text-success">@file.Price.ToString("N0") تومان</small>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <small class="text-muted">
                                            <i class="bi bi-eye"></i> @file.ViewCount
                                            <i class="bi bi-download ms-2"></i> @file.DownloadCount
                                        </small>
                                        @* <small class="text-muted">@file.CreatedDate.ToString("yyyy/MM/dd")</small> *@
                                    </div>
                                </a>
                            }
                        </div>

                        @if (Model.DataFiles.Count(f => f.IsActive) > 10)
                        {
                            <div class="text-center mt-3">
                                <a asp-controller="DataFiles" asp-action="Category" asp-route-id="@Model.Id"
                                   class="btn btn-outline-primary">
                                    مشاهده همه فایل‌های این دسته
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- سایدبار -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle"></i> اطلاعات
                    </h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-tag text-primary"></i>
                            <strong>نام:</strong> @Model.Name
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-card-text text-success"></i>
                            <strong>آیکون:</strong> <i class="@Model.IconClass"></i>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-calendar-check text-warning"></i>
                            <strong>وضعیت:</strong>
                            @if (Model.Id > 0)
                            {
                                <span class="badge bg-success">فعال</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">غیرفعال</span>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>